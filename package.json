{
  "name": "cds-dbs",
  "version": "1.0.0",
  "description": "This is a monorepo for our SQL Database Services.",
  "author": "daniel.hutzel@sap.com",
  "workspaces": [
    "core-sql",
    "postgres",
    "sqlite"
  ],
  "devDependencies": {
    "@capire/sflight": "sap-samples/cap-sflight",
    "axios": ">=1.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "express": "^4"
  },
  "scripts": {
    "prettier": "npx prettier --write .",
    "green-tests": "npm run -s test core-sql compliance",
    "red-tests": "npm run -s test general scenarios",
    "test": "npx jest --silent",
    "test:all": "npm run test:none && npm run test:sqlite && npm run test:pg",
    "test:none": "DB=none npm run test",
    "test:sqlite": "DB=sqlite npm run test",
    "test:pg": "npm run pg:up && DB=pg npm run test",
    "lint": "npx eslint . && npx prettier --check ."
  },
  "license": "SEE LICENSE"
}
