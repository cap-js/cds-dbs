{
  "name": "@cap-js/postgres",
  "description": "CDS database service for PostgreSQL",
  "keywords": [
    "CAP",
    "CDS",
    "PostgreSQL"
  ],
  "main": "index.js",
  "files": [
    "cds-plugin.js",
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "setup": "docker-compose -f pg-stack.yml up -d",
    "test": "npm run setup && jest --silent"
  },
  "dependencies": {
    "pg": "^8"
  },
  "peerDependencies": {
    "@sap/cds": ">=6.8.0"
  },
  "cds": {
    "requires": {
      "kinds": {
        "sql": {
          "[production]": {
            "kind": "postgres"
          }
        },
        "postgres": {
          "impl": "@cap-js/postgres",
          "dialect": "postgres",
          "vcap": {
            "label": "postgresql-db",
            "tag": "postgresql-db"
          }
        }
      },
      "db": "sql"
    }
  },
  "license": "SEE LICENSE"
}
