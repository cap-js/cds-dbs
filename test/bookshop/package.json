{
  "name": "@capire/bookshop",
  "version": "1.0.0",
  "description": "A simple self-contained bookshop service.",
  "files": [
    "app",
    "srv",
    "db",
    "index.cds",
    "index.js"
  ],
  "dependencies": {
    "@cap-js/sqlite": "*",
    "@sap/cds": "*",
    "express": "^4.17.1"
  },
  "scripts": {
    "genres": "cds serve test/genres.cds",
    "start": "cds run",
    "watch": "cds watch"
  },
  "cds": {
    "requires": {
      "S4": {
        "service": "API_BUSINESS_PARTNER",
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER"
      }
    },
    "features": {
      "ieee754compatible": true
    }
  }
}
