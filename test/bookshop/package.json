{
  "name": "@capire/bookshop",
  "version": "1.0.0",
  "description": "A simple self-contained bookshop service.",
  "files": [
    "app",
    "srv",
    "db",
    "index.cds",
    "index.js"
  ],
  "dependencies": {
    "@cap-js/sqlite": "*",
    "@sap/cds": "*",
    "express": "^4.17.1"
  },
  "scripts": {
    "genres": "cds serve test/genres.cds",
    "start": "npm install && rm -rf ../node_modules && mv ./node_modules/ ../node_modules && cds-serve",
    "watch": "cds watch"
  },
  "cds": {
    "features": {
      "ieee754compatible": true
    }
  }
}
